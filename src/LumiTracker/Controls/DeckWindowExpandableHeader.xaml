<UserControl x:Class="LumiTracker.Controls.DeckWindowExpandableHeader"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
            xmlns:helpers="clr-namespace:LumiTracker.Helpers"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:ctrls="clr-namespace:LumiTracker.Controls"
            xmlns:system="clr-namespace:System;assembly=System.Runtime"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ui:ThemesDictionary Theme="Dark" />
            <ui:ControlsDictionary />
        </ResourceDictionary.MergedDictionaries>

        <helpers:SizeWithRatioConverter x:Key="SizeWithRatioConverter" />

        <!-- Copied from lepoco wpfui TreeViewItem.xaml -->
        <Style x:Key="ExpandCollapseToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <!--  Universal WPF UI focus  -->
            <Setter Property="FocusVisualStyle" Value="{DynamicResource DefaultControlFocusVisualStyle}" />
            <!--  Universal WPF UI focus  -->
            <Setter Property="Focusable" Value="False" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid
                            x:Name="ChevronContainer"
                            Width="15"
                            Height="15"
                            Background="Transparent"
                            RenderTransformOrigin="0.5, 0.5">
                            <Grid.RenderTransform>
                                <RotateTransform Angle="0" />
                            </Grid.RenderTransform>
                            <ui:SymbolIcon
                                x:Name="ChevronIcon"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="{TemplateBinding FontSize}"
                                Symbol="ChevronRight28" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ChevronContainer"
                                                Storyboard.TargetProperty="(Grid.RenderTransform).(RotateTransform.Angle)"
                                                To="90"
                                                Duration="0:0:0.16" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="ChevronContainer"
                                                Storyboard.TargetProperty="(Grid.RenderTransform).(RotateTransform.Angle)"
                                                To="0"
                                                Duration="0:0:0.16" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </ResourceDictionary>
    </UserControl.Resources>

    <!-- Based on lepoco wpfui TreeViewItem.xaml -->
    <Border
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=ctrls:DeckWindowExpandableHeader}}"
        x:Name="MainBorder"
        Padding="0,2,0,3"
        CornerRadius="4"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        IsHitTestVisible="True"
        MouseEnter="OnMouseEnter"
        MouseLeave="OnMouseLeave"
        PreviewMouseDown="OnPreviewMouseDown"
        Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="9*" />
            </Grid.ColumnDefinitions>
            <ToggleButton
                x:Name="Expander"
                Grid.Column="0"
                Margin="{Binding HeaderMargin, Mode=OneWay}"
                ClickMode="Press"
                FontSize="{Binding HeaderFontSize, Mode=OneWay}"
                IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                Style="{StaticResource ExpandCollapseToggleButtonStyle}" />
            <TextBlock
                x:Name="PART_Header"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="{Binding HeaderFontSize, Mode=OneWay}"
                Text="{Binding Header, Mode=OneWay}" />
        </Grid>

    </Border>

</UserControl>
