<Window 
    x:Class="LumiTracker.Views.Windows.DeckWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:LumiTracker.Views.Windows"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:LumiTracker.Models"
    xmlns:helpers="clr-namespace:LumiTracker.Helpers"
    xmlns:svs="clr-namespace:LumiTracker.Services"
    xmlns:ctrls="clr-namespace:LumiTracker.Controls"
    mc:Ignorable="d"
    Title="DeckWindow" 
    Topmost="True" 
    ShowInTaskbar="False"
    WindowStyle="None"
    AllowsTransparency="True"
    ResizeMode="NoResize"
    Height="600" Width="400">

    <Window.Template>
        <ControlTemplate TargetType="{x:Type Window}">
            <Border Background="Transparent" CornerRadius="7">
                <AdornerDecorator>
                    <ContentPresenter/>
                </AdornerDecorator>
            </Border>
        </ControlTemplate>
    </Window.Template>

    <Window.Resources>
        <DataTemplate x:Key="EventCardViewTemplate" DataType="{x:Type models:EventCardView}">
            <Grid 
                HorizontalAlignment="Stretch"
                Margin="2, -5, 10, -5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>

                <Border 
                    Grid.Column="0" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Height="20"
                    >
                    <Border.OpacityMask>
                        <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                            <GradientStop Color="#bf000000" Offset="0.5" />
                            <GradientStop Color="Transparent" Offset="1" />
                        </LinearGradientBrush>
                    </Border.OpacityMask>
                    <Image 
                        Source="pack://siteoforigin:,,,/assets/start.png" 
                        Stretch="UniformToFill"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                    />
                </Border>
                <TextBlock
                    Grid.Column="0"
                    Margin="0,0,0,0"
                    FontWeight="Bold"
                    Text="{Binding CardName, Mode=OneWay}" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"
                    Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                    Text="{Binding Count, Mode=OneWay}" />
            </Grid>
        </DataTemplate>

        <Style TargetType="ListViewItem">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>

        <helpers:MultiBooleanAndConverter x:Key="MultiBooleanAndConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ToggleButton 
            Grid.Row="1"
            x:Name="toggle" 
            Content="{svs:Localization AppName}" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            />
        <Popup 
            Grid.Row="0"
            x:Name="DeckWindowPopup" 
            Placement="Top" 
            StaysOpen="True"
            AllowsTransparency="True"
            Width="{Binding Width}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            PlacementTarget="{Binding ElementName=toggle}">

            <Popup.IsOpen>
                <MultiBinding Converter="{StaticResource MultiBooleanAndConverter}">
                    <Binding ElementName="toggle" Path="IsChecked" />
                    <Binding Path="ViewModel.IsShowing" />
                    <!-- Add more bindings for additional boolean properties -->
                </MultiBinding>
            </Popup.IsOpen>

            <ctrls:HeaderFilledTabControl 
                Margin="0,8,0,0"
                Background="#20aaaaaa" >

                <TabItem 
                    Background="#20aaaaaa">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="XboxConsole24" />
                            <TextBlock Text="Hello" />
                        </StackPanel>
                    </TabItem.Header>

                    <ui:ListView
                        Grid.Column="0"
                        MaxHeight="200"
                        d:ItemsSource="{d:SampleData ItemCount=2}"
                        ItemsSource="{Binding ViewModel.BasicListViewItems, Mode=TwoWay}"
                        SelectedIndex="1"
                        ItemTemplate="{StaticResource EventCardViewTemplate}"
                        />
                </TabItem>
                
                <TabItem 
                    Background="#20aaaaaa" 
                    IsSelected="True"
                    >
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <ui:SymbolIcon Margin="0,0,6,0" Symbol="StoreMicrosoft16" />
                            <TextBlock Text="The cake" />
                        </StackPanel>
                    </TabItem.Header>
                    
                    <ui:ListView
                        Grid.Column="0"
                        MaxHeight="200"
                        d:ItemsSource="{d:SampleData ItemCount=2}"
                        ItemsSource="{Binding ViewModel.BasicListViewItems, Mode=TwoWay}"
                        SelectedIndex="1"
                        ItemTemplate="{StaticResource EventCardViewTemplate}"
                        />
                </TabItem>

            </ctrls:HeaderFilledTabControl>
        </Popup>

        
    </Grid>
</Window>
